<?xml version="1.0" encoding="utf-8"?>
<com.jy.widgets.custom.SlidableView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:id_view_bottom="@+id/item_cartlist_delete"
    app:id_view_top="@+id/item_cartlist_ll_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_cartlist_delete"
            android:layout_width="67dp"
            android:layout_height="120dp"
            android:layout_gravity="end"
            android:layout_toRightOf="@+id/item_cartlist_ll_content"
            android:background="#e14433"
            android:gravity="center"
            android:text="删除"
            android:textColor="#fff"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/item_cartlist_ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d7d7d7" />


            <RelativeLayout
                android:id="@+id/item_cartlist_item_content"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@android:color/darker_gray">

                <ImageView
                    android:id="@+id/item_cartlist_img_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_circle_uncheck" />

                <ImageView
                    android:id="@+id/item_cartlist_img"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/item_cartlist_img_cb"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/item_cartlist_img"
                    android:layout_alignTop="@+id/item_cartlist_img"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/item_cartlist_img"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_cartlist_good_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="西蒙电气（N95558）"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/item_cartlist_service_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="送货与安装（¥10.0）"
                        android:textColor="#999"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/item_cartlist_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¥36.6"
                        android:textColor="#d84b60"
                        android:textSize="15sp" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d7d7d7" />
        </LinearLayout>
    </RelativeLayout>
</com.jy.widgets.custom.SlidableView>